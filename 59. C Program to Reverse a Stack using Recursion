#include <stdio.h>
#include <stdlib.h>

#define MAX 100

int stack[MAX];
int top = -1;

// Function to push an element onto stack
void push(int x) {
    if (top == MAX - 1) {
        printf("Stack Overflow\n");
        return;
    }
    stack[++top] = x;
}

// Function to pop an element from stack
int pop() {
    if (top == -1) {
        printf("Stack Underflow\n");
        return -1;
    }
    return stack[top--];
}

// Function to check if stack is empty
int isEmpty() {
    return top == -1;
}

// Function to insert element at the bottom of stack
void insertAtBottom(int item) {
    if (isEmpty()) {
        push(item);
        return;
    }
    int temp = pop();
    insertAtBottom(item);
    push(temp);
}

// Function to reverse the stack using recursion
void reverseStack() {
    if (!isEmpty()) {
        int temp = pop();
        reverseStack();
        insertAtBottom(temp);
    }
}

// Function to display stack elements
void display() {
    if (isEmpty()) {
        printf("Stack is empty\n");
        return;
    }
    printf("Stack elements from top to bottom: ");
    for (int i = top; i >= 0; i--) {
        printf("%d ", stack[i]);
    }
    printf("\n");
}

int main() {
    int n, value;
    printf("Enter number of elements in stack: ");
    scanf("%d", &n);

    printf("Enter stack elements:\n");
    for (int i = 0; i < n; i++) {
        scanf("%d", &value);
        push(value);
    }

    printf("Original Stack:\n");
    display();

    reverseStack();

    printf("Reversed Stack:\n");
    display();

    return 0;
}
