#include <stdio.h>

#define MAX 10

// Function to get cofactor of matrix
void getCofactor(int mat[MAX][MAX], int temp[MAX][MAX], int p, int q, int n) {
    int i = 0, j = 0;
    for (int row = 0; row < n; row++) {
        for (int col = 0; col < n; col++) {
            // Copy only elements not in row p and column q
            if (row != p && col != q) {
                temp[i][j++] = mat[row][col];
                if (j == n - 1) {
                    j = 0;
                    i++;
                }
            }
        }
    }
}

// Recursive function to find determinant
int determinant(int mat[MAX][MAX], int n) {
    if (n == 1)
        return mat[0][0];

    int det = 0;
    int temp[MAX][MAX];
    int sign = 1; // Sign multiplier

    for (int f = 0; f < n; f++) {
        getCofactor(mat, temp, 0, f, n);
        det += sign * mat[0][f] * determinant(temp, n - 1);
        sign = -sign; // Alternate signs
    }

    return det;
}

int main() {
    int n, mat[MAX][MAX];

    printf("Enter the size of the square matrix: ");
    scanf("%d", &n);

    printf("Enter elements of %dx%d matrix:\n", n, n);
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            scanf("%d", &mat[i][j]);
        }
    }

    int det = determinant(mat, n);
