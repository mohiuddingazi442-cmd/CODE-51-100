#include <stdio.h>

#define ROWS 3
#define COLS 4

// Function to sort a single row using simple bubble sort
void sortRow(int row[], int cols) {
    for (int i = 0; i < cols - 1; i++) {
        for (int j = 0; j < cols - i - 1; j++) {
            if (row[j] > row[j + 1]) {
                // Swap elements
                int temp = row[j];
                row[j] = row[j + 1];
                row[j + 1] = temp;
            }
        }
    }
}

// Function to print 2D array
void print2DArray(int arr[][COLS], int rows, int cols) {
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            printf("%d ", arr[i][j]);
        }
        printf("\n");
    }
}

int main() {
    int arr[ROWS][COLS];
    
    // Input elements
    printf("Enter elements of %dx%d 2D array:\n", ROWS, COLS);
    for (int i = 0; i < ROWS; i++) {
        for (int j = 0; j < COLS; j++) {
            scanf("%d", &arr[i][j]);
        }
    }

    // Sort each row
    for (int i = 0; i < ROWS; i++) {
        sortRow(arr[i], COLS);
    }

    // Print sorted 2D array
    printf("2D Array after sorting rows:\n");
    print2DArray(arr, ROWS, COLS);

    return 0;
}
