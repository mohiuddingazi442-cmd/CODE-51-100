#include <stdio.h>

// Function to check whether a number is prime
int isPrime(int num)
{
    int i;
    if (num <= 1)
        return 0;

    for (i = 2; i * i <= num; i++)
    {
        if (num % i == 0)
            return 0;
    }
    return 1;
}

int main()
{
    int n, i, flag = 0;

    printf("Enter a number: ");
    scanf("%d", &n);

    for (i = 2; i <= n / 2; i++)
    {
        if (isPrime(i) && isPrime(n - i))
        {
            printf("%d = %d + %d\n", n, i, n - i);
            flag = 1;
        }
    }

    if (!flag)
        printf("%d cannot be expressed as the sum of two prime numbers.\n", n);

    return 0;
}
