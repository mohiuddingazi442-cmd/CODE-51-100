#include <stdio.h>

int main() {
    char str[200];
    int i;

    printf("Enter a sentence: ");
    gets(str);   // for exam purpose

    // Print first letter of the first word
    printf("%c ", str[0]);

    // Print first letter after each space
    for (i = 1; str[i] != '\0'; i++) {
        if (str[i - 1] == ' ' && str[i] != ' ') {
            printf("%c ", str[i]);
        }
    }

    return 0;
}
